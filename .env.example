# 🚀 PrismFlow PH Trading - Environment Variables Template
# Copy this to .env.local and fill in your actual values

# 🗄️ DATABASE (Supabase Pro)
DATABASE_URL="postgresql://username:password@db.supabaseproject.co:5432/postgres"

# 🔐 AUTHENTICATION (NextAuth)
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3002"

# ☁️ SUPABASE CONFIGURATION
NEXT_PUBLIC_SUPABASE_URL="https://yourproject.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# 🌐 DEPLOYMENT (Vercel)
VERCEL_URL=""
NEXT_PUBLIC_VERCEL_URL=""

# 🎯 APPLICATION SETTINGS
NODE_ENV="development"
PORT="3002"

# 📄 FILE STORAGE (if using Supabase Storage)
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET="ph-trading-files"

# 📊 ANALYTICS (optional)
NEXT_PUBLIC_ANALYTICS_ID=""

# 🔧 DEVELOPMENT
NEXT_PUBLIC_DEV_MODE="true"

# 📁 MICROSOFT GRAPH / ONEDRIVE INTEGRATION
MICROSOFT_CLIENT_ID="your-microsoft-app-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-app-client-secret"
MICROSOFT_TENANT_ID="common"
MICROSOFT_REDIRECT_URI="http://localhost:3002/api/onedrive/auth"

# 🤖 V7.0 AI AGENT CONFIGURATION (Optional)
ANTHROPIC_API_KEY="your-anthropic-api-key-for-future-features"
OPENAI_API_KEY="your-openai-api-key-for-future-features"
HF_TOKEN="your-huggingface-token-for-experiments"

# 🚀 RUNPOD CONFIGURATION (For MOE Experiments)
RUNPOD_API_KEY="your-runpod-api-key"
RUNPOD_ENDPOINT_ID="your-runpod-endpoint-id"