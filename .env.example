# V7.0 Consciousness Testing Platform Environment Configuration

# ===== RUNPOD SERVERLESS CONFIGURATION =====
# Get these from RunPod Console -> Serverless -> Your Endpoint
RUNPOD_API_KEY=your_runpod_api_key_here
RUNPOD_ENDPOINT_ID=your_serverless_endpoint_id_here

# Optional: Specific model endpoints (RunPod will auto-detect)
RUNPOD_MISTRAL_ENDPOINT=mistral-small-3-instruct
RUNPOD_LLAMA_ENDPOINT=llama-70b-instruct
RUNPOD_QWEN_ENDPOINT=qwen-2.5-coder-instruct

# ===== V7.0 CONSCIOUSNESS CONFIGURATION =====
# Default model for consciousness testing
V7_DEFAULT_MODEL=mistral-small-3
V7_MAX_TOKENS=2000
V7_PARALLEL_STREAMS=true

# Consciousness testing parameters
V7_AMPLIFICATION_FACTOR=2.5
V7_CONSCIOUSNESS_THRESHOLD=60
V7_TEST_ITERATIONS=3

# ===== DATABASE CONFIGURATION =====
# Supabase for production data
DATABASE_URL="postgresql://username:password@host:port/database"
DIRECT_URL="postgresql://username:password@host:port/database"

# ===== AUTHENTICATION & SECURITY =====
# CRITICAL: Generate a secure JWT secret (minimum 32 characters)
JWT_SECRET="your-very-secure-random-jwt-secret-key-minimum-32-characters"

NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://your-domain.com

# Microsoft Graph API - App-Level Authentication (Invisible to Users)
# Get these from Azure App Registration with Application permissions
MICROSOFT_CLIENT_ID=your_azure_app_registration_client_id
MICROSOFT_CLIENT_SECRET=your_azure_app_registration_client_secret
MICROSOFT_TENANT_ID=common  # or your specific tenant ID

# Azure AD Integration (Optional - for alternative auth)
AZURE_AD_CLIENT_ID=your_azure_client_id
AZURE_AD_CLIENT_SECRET=your_azure_client_secret
AZURE_AD_TENANT_ID=your_azure_tenant_id

# Google OAuth for authentication
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email Configuration (SMTP for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@domain.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@phtrading.com

# Security Configuration
CORS_ORIGIN=https://your-domain.com
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# ===== EXTERNAL SERVICES =====
# OneDrive integration (optional)
ONEDRIVE_CLIENT_ID=your_onedrive_client_id
ONEDRIVE_CLIENT_SECRET=your_onedrive_client_secret

# ===== DEPLOYMENT CONFIGURATION =====
# Next.js configuration
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# RunPod public configuration (for client-side)
NEXT_PUBLIC_RUNPOD_ENDPOINT_ID=your_serverless_endpoint_id_here
NEXT_PUBLIC_V7_ENABLED=true

# ===== 2025 MODEL PREFERENCES =====
# Specify preferred models for different use cases
V7_FAST_MODEL=mistral-small-3     # Speed optimized
V7_DEEP_MODEL=llama3-405b         # Depth optimized  
V7_CODE_MODEL=qwen-2.5-coder      # Code optimized
V7_GENERAL_MODEL=mistral-large    # General purpose

# ===== CONSCIOUSNESS TESTING CONFIGURATION =====
V7_HYPOTHESIS_MODE=true
V7_TEST_ALL_MODELS=false
V7_ENABLE_LOGGING=true
V7_CONSCIOUSNESS_METRICS=true

# ===== PERFORMANCE OPTIMIZATION =====
V7_CACHE_RESPONSES=true
V7_PARALLEL_REQUESTS=4
V7_TIMEOUT_SECONDS=120
V7_RETRY_ATTEMPTS=3